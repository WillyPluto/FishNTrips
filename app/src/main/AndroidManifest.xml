<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.fish.catchreport">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddFishActivity"
            android:label="@string/title_activity_add_fish"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Menu" />
        <activity
            android:name=".TripInfoPage"
            android:label="@string/title_activity_trip_info_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterUser"
            android:label="@string/title_activity_register_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayTripInfo"
            android:label="@string/title_activity_display_trip_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BaseDrawerActivity"
            android:label="@string/title_activity_base_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AskBiologist"
            android:label="@string/title_activity_ask_biologist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeeklyStats"
            android:label="@string/title_activity_weekly_stats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeeklyStatsInput"
            android:label="@string/title_activity_weekly_stats_input"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
